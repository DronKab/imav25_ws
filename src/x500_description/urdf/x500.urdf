<?xml version="1.0"?>
<robot name="x500" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- base del dron -->
  <link name="base_link">
  <inertial>
    <origin xyz="0 0 0.24" rpy="0 0 0"/>
    <mass value="2.0"/>
    <inertia ixx="0.0217" ixy="0.0" ixz="0.0" iyy="0.0217" iyz="0.0" izz="0.04"/>
  </inertial>

   <!-- Frame corregido para la orientación del dron -->
  <link name="base_corrected" />

  <joint name="base_rotation_correction" type="fixed">
    <parent link="base_link"/>
    <child link="base_corrected"/>
    <origin xyz="0 0 0" rpy="0 0 3.141592654"/> <!-- Gira 180° sobre Z -->
  </joint>

  <visual name="base_link_visual">
    <origin xyz="0 0 0.025" rpy="0 0 3.141592654"/>
    <geometry>
      <mesh filename="package://x500_description/meshes/NXP-HGD-CF.dae" scale="1 1 1"/>
    </geometry>
  </visual>
</link>

  <!-- LIDAR -->
<link name="lidar_link">
  <inertial>
    <origin xyz="0 0 0.435" rpy="0 0 0"/>
    <mass value="0.37"/>
    <inertia ixx="0.000344" ixy="0.0" ixz="0.0" iyy="0.000344" iyz="0.0" izz="0.000222"/>
  </inertial>
</link>

<joint name="lidar_joint" type="fixed">
  <parent link="base_link"/>
  <child link="lidar_link"/>
  <origin xyz="-0.1 0 0.26" rpy="0 0 0"/>
</joint>

<!-- Frame del sensor dentro del lidar -->
<link name="lidar_link/lidar_2d_v2">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.001 0.001 0.001"/>
    </geometry>
  </visual>
</link>

<joint name="lidar_2d_v2_joint" type="fixed">
  <parent link="lidar_link"/>
  <child link="lidar_link/lidar_2d_v2"/>
  <origin xyz="0 0 0.105" rpy="0 0 0"/>
</joint>

  <!-- Rotor 0 -->
  <link name="rotor_0">
    <visual name="rotor_0_visual">
    <origin xyz="-0.022 -0.14638461538461536 -0.016" rpy="0 0 0"/>
    <geometry>
        <mesh filename="package://x500_description/meshes/1345_prop_ccw.stl" scale="0.8461538461538461 0.8461538461538461 0.8461538461538461"/>
    </geometry>
    <material name="dark_grey">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>
    </visual>

    <visual name="rotor_0_visual_motor_bell">
    <origin xyz="0 0 -0.032" rpy="0 0 0"/>
    <geometry>
        <mesh filename="package://x500_description/meshes/5010Bell.dae" scale="1 1 1"/>
    </geometry>
    </visual>
  </link>

  <joint name="rotor_0_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_0"/>
    <origin xyz="0.174 -0.174 0.06" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Rotor 1 -->
  <link name="rotor_1">
    <visual name="rotor_1_visual">
    <origin xyz="-0.022 -0.14638461538461536 -0.016" rpy="0 0 0"/>
    <geometry>
        <mesh filename="package://x500_description/meshes/1345_prop_ccw.stl" scale="0.8461538461538461 0.8461538461538461 0.8461538461538461"/>
    </geometry>
    <material name="dark_grey">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>
    </visual>

    <visual name="rotor_1_visual_motor_top">
    <origin xyz="0 0 -0.032" rpy="0 0 0"/>
    <geometry>
        <mesh filename="package://x500_description/meshes/5010Bell.dae" scale="1 1 1"/>
    </geometry>
    </visual>
  </link>
  <joint name="rotor_1_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_1"/>
    <origin xyz="-0.174 0.174 0.06" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Rotor 2 -->
  <link name="rotor_2">
    <visual name="rotor_2_visual">
    <origin xyz="-0.022 -0.14638461538461536 -0.016" rpy="0 0 0"/>
    <geometry>
        <mesh filename="package://x500_description/meshes/1345_prop_cw.stl" scale="0.8461538461538461 0.8461538461538461 0.8461538461538461"/>
    </geometry>
    <material name="dark_grey">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>
    </visual>

    <visual name="rotor_2_visual_motor_top">
    <origin xyz="0 0 -0.032" rpy="0 0 0"/>
    <geometry>
        <mesh filename="package://x500_description/meshes/5010Bell.dae" scale="1 1 1"/>
    </geometry>
    </visual>
  </link>
  <joint name="rotor_2_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_2"/>
    <origin xyz="0.174 0.174 0.06" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Rotor 3 -->
  <link name="rotor_3">
    <visual name="rotor_3_visual">
    <origin xyz="-0.022 -0.14638461538461536 -0.016" rpy="0 0 0"/>
    <geometry>
        <mesh filename="package://x500_description/meshes/1345_prop_cw.stl" scale="0.8461538461538461 0.8461538461538461 0.8461538461538461"/>
    </geometry>
    <material name="dark_grey">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>
    </visual>

    <visual name="rotor_3_visual_motor_top">
    <origin xyz="0 0 -0.032" rpy="0 0 0"/>
    <geometry>
        <mesh filename="package://x500_description/meshes/5010Bell.dae" scale="1 1 1"/>
    </geometry>
    </visual>
  </link>
  <joint name="rotor_3_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_3"/>
    <origin xyz="-0.174 -0.174 0.06" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Pi Camera -->
<link name="pi_camera_link"/>
<joint name="pi_camera_joint" type="fixed">
  <parent link="base_link"/>
  <child link="pi_camera_link"/>
  <origin xyz="0 0 0" rpy="0 1.57079 0"/> <!-- igual que en SDF -->
</joint>

<!-- Main camera -->
<link name="camera_link"/>
<joint name="camera_joint" type="fixed">
  <parent link="base_link"/>
  <child link="camera_link"/>
  <origin xyz="0.15 0 0" rpy="0 0 0"/>
</joint>


</robot>